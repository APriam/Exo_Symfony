{% extends 'base.html.twig' %}

{% block title %}Votre compte{% endblock %}

{% block body %}
    {% include 'nav/navbar.html.twig' %}
    <div class="container_form">
        <div class="form">
            <h1>Modifier vos informations</h1>
            {{ form_start(form) }}
                <div class="form-row">
                    <label for="{{ form.username.vars.id }}">Nom d'utilisateur :</label>
                    {{ form_widget(form.username) }}
                </div>
                <div class="form-row">
                    <label for="{{ form.password.vars.id }}">Mot de passe :</label>
                    {{ form_widget(form.password) }}
                </div>
                <div class="form-row">
                    <input type="submit" value="Modifier">
                </div>
                <div class="form-row">
                    <a href="{{ path('user_delete') }}"><input type="button" value="Supprimer le compte"></a>
                </div>
            {{ form_end(form) }}
        </div>
        {% for message in app.flashes('error_user') %}
            <div>
                {{ message }}
            </div>
        {% endfor %}
    </div>
    {% include 'footer/footer.html.twig' %}
{% endblock %}
